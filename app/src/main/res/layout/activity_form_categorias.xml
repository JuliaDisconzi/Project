<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_feed"
    tools:context=".FormCategorias">


   <TextView
       android:id="@+id/text_categorias"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:gravity="center"
       android:paddingTop="5dp"
       android:text="Categorias"
       android:textColor="@color/white"
       android:textSize="25dp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />


   <LinearLayout
       android:id="@+id/container_categorias"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="vertical"
       android:paddingHorizontal="15dp"
       android:paddingTop="15dp"
       android:background="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text_categorias">

      <androidx.core.widget.NestedScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ciencias_sociais"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Ciências Sociais e Humanas"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ciencias_extatas_tecnologias"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Ciências Exatas e Tecnologia"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
             android:layout_width="match_parent"
             android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ciencias_saude"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Ciências da Saúde"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ciencias_economicas"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Ciências Económicas e Empresariais"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ciencias_naturais"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Ciências Naturais"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_educacao"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Educação"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_artes_humanidades"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Artes e Humanidades"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ciencia_ambiental"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Ciências Ambientais e Sustentabilidade"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_direito"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Direito"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_psicologia"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Psicologia"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_geografia"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Geografia"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_fotografia"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Fotografia e Artes Visuais"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_fotografia"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/color_categorias"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:paddingHorizontal="50dp"
                   android:text="Ciências Sociais Aplicadas"
                   android:textColor="@color/white"
                   android:textSize="25dp"
                   android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

         </LinearLayout>

      </androidx.core.widget.NestedScrollView>

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>